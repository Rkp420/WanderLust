<% layout('./layouts/boilerplate') -%>
    <div class="row">
      <div class="col-8 offset-2">
        <h3 class="mt-3 mb-3">Create a New Listing</h3>
        <form method="POST" action="/listings" class="needs-validation" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-lebel">Title</label>
            <input name="listing[title]" class="form-control" placeholder="Enter Title" type="text" required />
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter valid name</div>
            
          </div>
          <div class="mb-3">
            <label for="description" class="form-lebel">Description</label>
            <textarea
              name="listing[description]"
              placeholder="Write Your Description"
              class="form-control"
              required
            ></textarea>
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter valid name</div>
          </div>
          <!-- <div class="mb-3">
            <label for="image url" class="form-lebel">Image Link</label> 
            <input
              name="listing[image][url]"
              placeholder="Enter Your image Link"
              class="form-control"
              type="text"
            />
          </div> -->
          <div class="mb-3">
            <label for="image url" class="form-lebel">Upload image</label> 
            <input
              name="listing[image]"
              class="form-control"
              type="file"
            />
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="mb-3">
                <label for="price" class="form-lebel">Price</label>
                <input name="listing[price]" class="form-control" placeholder="Enter Your Price" required />
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Enter valid name</div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="mb-3">
                <label for="country" class="form-lebel">Enter Your Country</label>
                <input name="listing[country]" class="form-control" placeholder="Eg: India" type="text" required />
                <div class="valid-feedback">Looks Good!</div>
                <div class="invalid-feedback">Enter valid name</div>
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="location" class="form-lebel">Location</label>
            <input
              name="listing[location]"
              placeholder="Eg: Rajsthan, Bihar"
              class="form-control"
              type="text"
              required
            />
            <div class="valid-feedback">Looks Good!</div>
            <div class="invalid-feedback">Enter valid name</div>
          </div>
          <button class="btn btn-dark mb-3">Add</button>    
        </form>
      </div>
    </div>

