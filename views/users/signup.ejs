<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <form action="/signup" method="post">
            <H1>Sign Up</H1>
            <div class="mb-3">
                <label for="username" class="form-lebel">Username</label>
                <input 
                name="username"
                id="username"
                type="text"
                class="form-control"
                required
                />
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-lebel">Email</label>
                <input 
                name="email"
                id="email"
                type="email"
                class="form-control"
                required
                />
                <div class="invalid-feedback">Please Enter a valid email</div>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-lebel">Password</label>
                <input 
                name="password"
                id="password"
                type="password"
                class="form-control"
                required
                />
            </div>
            <button class="btn btn-dark mb-3">Sign up</button>  
        </form>
    </div>
</div>